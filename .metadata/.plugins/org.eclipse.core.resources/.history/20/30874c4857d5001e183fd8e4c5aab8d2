package resourse;

import io.restassured.builder.RequestSpecBuilder;
import io.restassured.http.ContentType;
import io.restassured.specification.RequestSpecification;

public class Utils {
	public static RequestSpecification req;
	public static RequestSpecification getreq;
	public static RequestSpecification deletereq;
	
	public static RequestSpecification requestSpecification() {
		req=new RequestSpecBuilder().setBaseUri("https://jsonplaceholder.typicode.com").setContentType(ContentType.JSON).build();
		return req;
	}
	public static RequestSpecification getrequestSpecification(String title) {
		getreq=new RequestSpecBuilder().setBaseUri("https://jsonplaceholder.typicode.com").addQueryParam("title",""+title+"").build();
		return getreq;
	}
	
	/*
	 * public static RequestSpecification deleterequestSpecification() {
	 * deletereq=new
	 * RequestSpecBuilder().setBaseUri("https://jsonplaceholder.typicode.com").
	 * setContentType(ContentType.JSON).build(); return deletereq; }
	 */

}
